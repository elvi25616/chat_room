<main class="bg-slate-300 h-screen flex flex-col items-center justify-center gap-1">
    <div class="flex flex-col items-center gap-1">
      <%= image_tag('Image.png', width: 100) %>
      <h1 class="mt-2 text-center text-2xl leading-9 font-extrabold text-slate-800"> Chat App - Ruby On Rails </h1>
    </div>
    <div class="bg-slate-50 py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <h2 class="mt-2 text-center text-2xl leading-9 font-extrabold text-slate-800">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),class:'p-6 space-y-4 md:space-y-6 sm:p-8' ) do |f| %>
      
      <div class=" gap-1 my-2 items-center w-full">
        <%= f.label :email, class:"text-slate-800 font-bold inline-block py-2 pb-2 dark:text-white"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-lg font-medium rounded w-full'%>
      </div>

      <div class="gap-1 my-2 items-center w-full">
        <%= f.label :password,class:"text-slate-800 font-bold inline-block py-2 pb-2 dark:text-white"  %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'text-lg font-medium rounded w-full' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between gap-4">
          <div class="flex items-start py-4">
            <div class="flex items-center h-6 ">
              <%= f.check_box :remember_me, class: "w-4 h-4 border rounded" %>
            </div>
            <div class="ml-3 text-sm">
            <label for="remember" class="text-slate-800 font-bold ">Remember me</label>
          </div>
        </div>
      <% end %>
          
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <a href="/users/password/new" class="text-sm font-medium font-bold  text-slate-600 hover:underline dark:text-primary-500">Forgot password?</a>
      <% end %>
                    
    </div>
  
      <div class="gap-1 my-2 items-center w-full">
        <%= f.submit "Log in", data: {turbo: false},class:"bg-blue-600 w-full py-2 rounded-md text-white font-bold cursor-pointer hover:bg-blue-700" %>
      </div>

      <div class="flex gap-1 my-5 items-center justify-center">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'bg-green-800 rounded p-3 text-white font-semibold' %><br />
      <% end %>
      </div>

    <% end %>
    
   
    </div>
</main>
