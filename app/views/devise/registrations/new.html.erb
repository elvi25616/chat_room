<main class="bg-slate-300 h-screen flex flex-col items-center justify-center gap-4">
  <div class="flex flex-col items-center gap-1">
  <%= image_tag('Image.png', width: 100) %>
    <h1 class="mt-2 text-center text-2xl leading-9 font-extrabold text-slate-600"> Chat App - Ruby On Rails </h1>
  </div>
 
  <div class="bg-slate-50 py-8 px-4 shadow sm:rounded-lg sm:px-10"> 
    <h2 class="mt-2 text-center text-2xl leading-9 font-extrabold text-slate-600">Sign up</h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:'p-6 space-y-4 md:space-y-6 sm:p-8' ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class=" w-full">
        <%= f.label :email,class:"text-slate-600 font-bold inline-block py-2 pb-2 dark:text-white"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-sm font-medium rounded w-full' %>
      </div>

     
      <div class="gap-1 my-2 items-center w-full">
      <div class=" w-full">
        <%= f.label :password, class: 'text-slate-600 font-bold inline-block py-2 pb-2 dark:text-white' %>
        <%= f.password_field :password, autocomplete: "new-password", class:'text-xs font-medium rounded w-full' %>
      </div>
        <div class="flex w-full items-center justify-end">
          <% if @minimum_password_length %>
          <em class="text-sm font-semibold text-blue-300">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>
  

      <div class="gap-1 my-4 items-center w-full">
        <%= f.label :password_confirmation, class:"text-slate-600 font-bold inline-block  pb-2 dark:text-white"  %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'text-sm font-medium rounded w-full' %>
      </div>

      <div class="gap-1 my-2 items-center w-full">
        <%= f.submit "Sign up", data: {turbo: false},class:"bg-blue-600 w-full py-2 rounded-md text-white gap-4 font-bold cursor-pointer hover:bg-blue-700" %>
      </div>

      <div class="flex items-start">
        <div class="flex items-center h-5">
          <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800" required="">
        </div>
        <div class="ml-3 text-sm">
          <label for="terms" class="font-light text-gray-500 dark:text-gray-300">I accept the <a class="font-medium text-primary-600 hover:underline dark:text-primary-500" href="#">Terms and Conditions</a></label>
        </div>
    </div>
      <div class="flex  items-center justify-center">
        <%- if controller_name != 'sessions' %>
        <label class="mr-2 font-bold" >Â¿Ya tienes una cuenta?</label>
        <%= link_to "Log in",  new_session_path(resource_name), class: 'bg-amber-500 rounded p-1 text-white font-semibold' %><br />
        
    
        <% end %>
      </div>
      
    <% end %>

  </div>
</main>
